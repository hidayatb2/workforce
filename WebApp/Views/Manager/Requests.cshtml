@model IEnumerable<ResponseDb>

    <table class="table" style="margin-top:130px">
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Message</th>
            <th>Action</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SenderUsername</td>
                <td>@item.SenderUserRole</td>
                <td>@item.Description</td>
                <td><a class="btn btn-success" asp-action="Accept" asp-route-id="@item.SenderId" >Accept</a></td>
                <td><a asp-action="DeleteRequest" asp-route-Id="@item.Id"  class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a></td>
            </tr>
        }
    </table>