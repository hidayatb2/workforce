@model IEnumerable<UserResponse>

@{
    ViewData["Title"] = "Assigned Labours";
}






<h1>Attendance</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="post" id="form1">
    <table class="table">
        <thead>
            <tr>
                <th hidden>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNo)
                </th>

                <th>
                    Action
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td hidden>
                        @item.Id
                    </td>
                    <td>
                        @item.UserName.ToUpper()
                    </td>

                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.PhoneNo
                    </td>
                    <td>
                        <button asp-action="TimeIn" asp-controller="Manager" asp-route-LabourId="@item.Id" class="btn btn-primary" id="btnSubmit">In</button>
                    </td>
                    <td>
                        <button asp-action="TimeOut" asp-controller="Manager" asp-route-LabourId="@item.Id" class="btn btn-danger">Out</button>
                    </td>
                    <td>
                        <button asp-action="GetAttendance" asp-controller="Manager" asp-route-LabourId="@item.Id" class="btn btn-danger">View Attendance</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

