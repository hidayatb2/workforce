  @model LoginRequest
  <style>

      .minminmin {
    background: #dfefff;
    font-family: Assistant, sans-serif;
    display: flex;
    min-height: 90vh;
}

.login {

    color: white;
    background-color: #0C2D48;
    margin: auto;
    margin-top:100px;
    box-shadow: 0px 2px 10px rgba(0,0,0,0.2), 0px 10px 20px rgba(0,0,0,0.3), 0px 30px 60px 1px rgba(0,0,0,0.5);
    border-radius: 8px;
    padding: 50px;
    min-height: 400px;
    min-width: 400px;
}

    .login .head {
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .login .head .company {
            font-size: 2.2em;
            font-family: 'Times New Roman', Times, serif;
        }

    .login .msg {
        text-align: center;
    }

    .login .form input[type=text].text {
        border: none;
        background: none;
        box-shadow: 0px 2px 0px 0px white;
        width: 100%;
        color: white;
        font-size: 1em;
        outline: none;
    }

    .login .form .text::placeholder {
        color: #D3D3D3;
    }

    .login .form input[type=password].password {
        border: none;
        background: none;
        box-shadow: 0px 2px 0px 0px white;
        width: 100%;
        color: white;
        font-size: 1em;
        outline: none;
        margin-bottom: 20px;
        margin-top: 20px;
    }

    .login .form .password::placeholder {
        color: #D3D3D3;
    }

    .login .form .btn-login {
        background: none;
        text-decoration: none;
        color: white;
        box-shadow: 0px 0px 0px 2px white;
        border-radius: 3px;
        padding: 5px 2em;
        transition: 0.5s;
    }

        .login .form .btn-login:hover {
            background: white;
            color: black;
            font-weight: bold;
            transition: 1.5s;
        }

    .login .forgot {
        text-decoration: none;
        color: white;
        float: right;
    }

.forgot:hover {
    color: black;
}

  </style>
  <div class="minminmin">
      <section class="login" id="login" >
  <div class="mt-5">
    <div class="head">
      <h1 class="company">WorkForce</h1>
      
      </div>
      <div class="text-center">
        Login
      </div>
      

      <div class="form">
        <form  asp-action="login" asp-controller="Account" method="post">
      <input asp-for="UserName" placeholder='Username' class='text' required><br>
      <input asp-for="Password" placeholder='Password' class='password'><br>
      <input asp-for="RememberMe"  /> Remember Me<br/><br />
      <button type="submit" asp-action="login" asp-controller="Account" class='btn-login' id="do-login">Login</button>
      <a href="#" class='forgot'>Forgot?</a>
        </form>
      </div>
  </div>
</section>
  </div>


