        <div id="demo" style="margin-top:5%"  class="carousel slide" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
          @for (var i = 1; i <= Model.sliderResponses.Count(); i++)
