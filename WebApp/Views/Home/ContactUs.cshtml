@model ContactUsRequest
@{
    ViewData["Title"] = "ContactUs";
    Layout="_Layout";
}
@{
    var x = ViewBag.returnValue;
    if (x != null)
    {
        if (x > 0 )
        {    
            <script>
            swal("Message Sent", "Your Message was sent successfully", "success");
            </script>

        }
        else
        {
             <script>
            swal("Message not sent", "There is some issue", "error");
            </script>
        }
    }
}

  <main id="main">

    <!-- ======= Contact Section ======= -->
    <section class="breadcrumbs" >
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Contact</h2>
          <ol>
            <li><a asp-action="Index">Home</a></li>
            <li>Contact</li>
          </ol>
        </div>

      </div>
    </section><!-- End Contact Section -->

    <!-- ======= Contact Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
      <div class="container">

        <div class="row">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                <div class="info-box">
                  <i class="bx bx-map"></i>
                  <h3>Our Address</h3>
                  <p>Pulwama India 192301</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box">
                  <i class="bx bx-envelope"></i>
                  <h3>Email Us</h3>
                  <p>workforce@@yopmail.com<br>Workforce22@@yopmail.com</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box">
                  <i class="bx bx-phone-call"></i>
                  <h3>Call Us</h3>
                  <p>+91 9797121706<br>+91 8493974318</p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6">
            <form method="post">
              <div class="row">

                   
                  <input asp-for="Id" class="form-control" hidden>
                
                <div class="col-md-6 form-group">
                  <input asp-for="Name" class="form-control" placeholder="Your Name" required="required">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input asp-for="Email" class="form-control" required="required" placeholder="Your Email" >
                </div>

                 <div class="col-md-6 form-group mt-3 mt-md-0 col-lg-12">
                  <input asp-for="PhoneNo" class="form-control" placeholder="Your Phone No" required="required">
                </div>

              </div>

              <div class="form-group mt-3">
                <textarea asp-for="Message" class="form-control"  rows="5" placeholder="Message" required="required"></textarea>
              </div>

              <div class="text-center"><button type="submit" class="btn btn-primary mt-2">Send Message</button></div>
            </form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Section -->

    <!-- ======= Map Section ======= -->
    <section class="map mt-2">
      <div class="container-fluid p-0">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3305.773259809898!2d74.79863421430748!3d34.04968692531399!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x38e18fcf50000001%3A0x32bfbd88da819de3!2sLogichub%20software%20solutions!5e0!3m2!1sen!2sin!4v1649133277941!5m2!1sen!2sin"
          width="600" height="450" style="border:0;" allowfullscreen loading="lazy"></iframe>
       
      </div>

    </section>
    <!-- End Map Section -->

  </main>
  <!-- End #main -->


  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>


