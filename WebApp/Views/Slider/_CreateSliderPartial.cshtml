@model SliderRequest

<div>
    <h1>Add Slider</h1>
</div>

    <form asp-action="AddSlider" id="postForm" asp-controller="Slider" enctype="multipart/form-data">
        <div>
            <input asp-for="Caption" class="form-control" placeholder="Caption">
        </div>
        <div class="form-group input-group">
            <input type="file" name="File" class="custom-file-input" />
            <label class="custom-file-label"></label>
            <span asp-validation-for="File" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" name="submit" value="Add" />
        </div>
    </form>
