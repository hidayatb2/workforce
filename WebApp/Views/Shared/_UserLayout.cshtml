@if (User.Identity.IsAuthenticated)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@User.GetRole()</title>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="" name="keywords">
        <meta content="" name="description">

        <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

        <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

        <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="bower_components/sweetalert2/dist/sweetalert2.min.css">

        <!-- Libraries Stylesheet -->
    <link href="~/AdminFiles/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
        <link href="~/AdminFiles/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

        <!-- Customized Bootstrap Stylesheet -->
    <link href="~/AdminFiles/css/bootstrap.min.css" rel="stylesheet">

        <!-- Template Stylesheet -->
    <link href="~/AdminFiles/css/style.css" rel="stylesheet">

        <link rel="stylesheet" href="~/Client/services/tata-master/dist/index.css">

    </head>

    <body>
        <!--Nav Bar Admin-->

    <div class="container-xxl position-relative bg-white d-flex p-0">
            <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <!-- Spinner End -->
            <!-- Sidebar Start -->
        <div style="background-color:#0b212d" class="sidebar pe-4 pb-3">
                <nav style="background-color:#0b212d" class="navbar navbar-light">
                    <a href="#" class="navbar-brand mx-4 mb-3">
                        <a asp-action="index" asp-controller="home"><h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>WorkForce</h3></a>
                    </a>
                    <div class="d-flex align-items-center ms-4 mb-4">
                        <div class="position-relative">
                            <img class="rounded-circle" src="@User.GetImagePath()" alt="" style="width: 40px; height: 40px;">
                            <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0 text-light">@User.GetUserName().ToUpper()</h6>
                            <span class="text-success">@User.GetRole()</span>
                        </div>
                    </div>
                    <div class="navbar-nav w-100">

                        @*@if (User.IsInRole(UserRole.Faculty.ToString()) || User.IsInRole(UserRole.HOD.ToString()))
                            {
                            <a asp-controller="Employee" asp-action="Index" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                            <a asp-action="Index" asp-controller="Question" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Question Bank</a>
                            <a asp-controller="paper" asp-action="create" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Add Paper</a>
                            <a asp-controller="paper" asp-action="getpapers" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Papers</a>
                            }*@
                        @if (User.IsInRole(UserRole.Admin.ToString()))
                        {
                            <a asp-controller="Admin" asp-action="Dashboard" class="nav-item nav-link text-light "><i style="color:black" class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                            <a asp-action="Index" asp-controller="Slider" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>Add Slider</a>
                            <a asp-action="Search" asp-controller="Admin" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>Users</a>
                            <a asp-action="messages" asp-controller="Admin" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>Feedback</a>
                            <a asp-action="Testimonial" asp-controller="Admin" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>Testimonial</a>
                            <a asp-action="Create" asp-controller="admin" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-table me-2"></i>Add User</a>


                        }
                        @if (User.IsInRole(UserRole.Manager.ToString()) || User.IsInRole(UserRole.Contractor.ToString()) || User.IsInRole(UserRole.Labour.ToString()))
                        {
                            <a asp-action="assignedlabours" asp-controller="Manager" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-table me-2"></i>Attendance</a>
                            <a asp-action="viewbids" asp-controller="bid" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>View Bids</a>
                        }


                        @if (User.IsInRole(UserRole.Customer.ToString()))
                        {
                            <a asp-action="Index" asp-controller="bid" class="nav-item nav-link text-light "><i style="color:black" class="fa fa-th me-2"></i>Add Bids</a>
                        }


                        <a asp-action="changepassword" asp-controller="Account" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>Change Password</a>
                        <a asp-action="logout" asp-controller="Account" class="nav-item nav-link text-light"><i style="color:black" class="fa fa-th me-2"></i>Logout</a>

                    </div>
                </nav>
            </div>
            <!-- Sidebar End -->
            <!-- Content Start -->
        <div class="content">
                <!-- Navbar Start -->
            <nav style="background-color:#0b212d" class="navbar navbar-expand navbar-light sticky-top px-4 py-0">
                    <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                        <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                    </a>
                    <a href="#" class="sidebar-toggler flex-shrink-0">
                        <i class="fa fa-bars"></i>
                    </a>

                    <div class="navbar-nav align-items-center ms-auto">
                        @if (User.IsInRole(nameof(UserRole.Admin)))
                        {
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fa fa-envelope me-lg-2"></i>
                                    <span style="color:white" class="d-none d-lg-inline-flex">Message</span>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0" style="max-height:300px;overflow-y:scroll;z-index:100000;min-height:50px">
                                    @*@await Component.InvokeAsync("ContactMessage")*@
                                </div>
                            </div>

                        }
                         <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                               
                                <img class="rounded-circle me-lg-2" src="@User.GetImagePath()" alt="" style="width: 40px; height: 40px;">
                                <span style="color:white" class="d-none d-lg-inline-flex">@User.GetUserName().ToUpper()</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                                @if (User.IsInRole(UserRole.Admin.ToString()))
                                {
                                    <a asp-action="EditAdmin" asp-controller="Account" class="dropdown-item">My Profile</a>
                                }
                                 @if (User.IsInRole(UserRole.Manager.ToString()) || User.IsInRole(UserRole.Labour.ToString()) || User.IsInRole(UserRole.Customer.ToString()) || User.IsInRole(UserRole.Contractor.ToString()))
                                {
                                    <a asp-action="Profile" asp-controller="Account" class="dropdown-item">My Profile</a>
                                }
                                <a asp-action="logout" asp-controller="Account" class="dropdown-item">Logout</a>
                                <a asp-action="index" asp-controller="Home" class="dropdown-item">GoTo External Site</a>

                            </div>
                        </div>
                    </div>
                </nav>
                <!-- Navbar End -->
                <!-- Body -->
            @RenderBody()
                <!-- Body End -->
        </div>
            <!-- Content End -->
            <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        </div>

        <script>

            let searchBox =  document.getElementById("search");
            searchBox.addEventListener("keyup",()=>{
                fetch()
            })
        </script>

        <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

        <script asp-append-version="true" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script asp-append-version="true" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/chart/chart.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/easing/easing.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/waypoints/waypoints.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/owlcarousel/owl.carousel.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/tempusdominus/js/moment.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script asp-append-version="true" src="~/AdminFiles/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <script src="~/Client/services/tata-master/dist/tata.js"></script>
        <script src="~/Client/services/tata-master/dist/index.js"></script>

        @*SWAL LINK*@
        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


        <!-- Include a polyfill for ES6 Promises (optional) for IE11 and Android browser -->
        @*SWAL LINK*@

        <!-- Template Javascript -->
    <script asp-append-version="true" src="~/AdminFiles/js/main.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
    </html>
}