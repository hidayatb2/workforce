@model TestimonialRequest

@{
    var x = ViewBag.returnValue;
    if (x != null)
    {
        if (x > 0)
        {
            <script>
                swal("Feedback Sent", "Feedback Shared successfully", "success");
            </script>

        }
        else
        {
            <script>
                swal("Message not sent", "There is some issue", "error");
            </script>
        }
    }
}

<div class="container" style="margin-top:100px; text-align:center">
    <h2>
        Your Feedback
    </h2>
    <div class="container mb-2">
        <form method="post" asp-action="Testimonial" asp-controller="Testimonial">
            <input asp-for="Id" class="form-control" hidden>

            <div class=" form-group">
                <input asp-for="Name" class="form-control" placeholder="Your Name" required="required">
            </div>
            <div class="form-group mt-3">
                <textarea asp-for="FeedbackMessage" class="form-control" rows="5" placeholder="Share Your Feedback" required="required"></textarea>
            </div>
            <div>
                <select class="form-control" asp-items="@Html.GetEnumSelectList<UserRole>()" hidden>
                </select>
            </div>


            <div class="text-center"><button type="submit" class="btn btn-primary mt-2">Share Feedback</button></div>
        </form>
    </div>

</div>
