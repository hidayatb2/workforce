@model IEnumerable<UserResponse>

@if (Model.Count() > 0)
{
    <div>
        <table class="table table-light table-hover" style="max-width:70%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone No</th>
                    @* <th>Created By</th>*@
                    <th>Created On</th>
                    <th>User Role</th>
                    <th>User Status</th>
                    <th><th>Action</th></th>
                </tr>
            </thead>
            <tbody id="dataDiv">


                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNo</td>
                        @* <td>@user.CreatedBy</td>*@
                        <td>@user.CreatedOn</td>
                        <td>@user.UserRole</td>
                        <td>@user.UserStatus</td>
                        <td>
                            <a asp-action="details" class="btn btn-primary" asp-route-Id="@user.Id">Details</a>
                        </td>
                        <td>
                            <span class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                                <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                            </span>
                        </td>
                    </tr>
                }


            </tbody>

        </table>
    </div>
}

else if (Model.Count() == 0)
{
    <div><h3 class="ml-5">Select Role Or enter valid name email or phone!</h3></div>
}

@section Scripts
{
         <script type="module" src="~/client/adminService.js" asp-append-version="true"></script>
}
