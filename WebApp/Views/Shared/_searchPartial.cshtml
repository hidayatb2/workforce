@model IEnumerable<UserResponse>

@if (Model.Count() > 0)
{
    <div>
        <table class="table table-hover" >
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Email</td>
                    <td>Phone No</td>
                    @* <th>Created By</th>*@
                    <td>Created On</td>
                    <td>User Role</td>
                    <td>User Status</td>
                    <td>Action</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody id="dataDiv">


                @foreach (var user in Model)
                {
                    <tr>
                        <form method="post">
                            <input type="text" name="Id" value="@user.Id" hidden/>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNo</td>
                        @* <td>@user.CreatedBy</td>*@
                        <td>@user.CreatedOn</td>
                        <td>@user.UserRole</td>
                        <td>@user.UserStatus</td>
                        <td>
                            <a asp-action="details" class="btn btn-primary" asp-route-Id="@user.Id">Details</a>
                        </td>
                        <td>
                            
                            <button type="submit" asp-action="changestatus" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-primary">Change Status</button>

                           @* <span class="form-check form-switch" >
                                <input  class="form-check-input chkStatus" type="checkbox" asp-route-id="@user.Id"   id="flexSwitchCheckChecked" checked >
                                <label class="form-check-label" for="flexSwitchCheckChecked" onclick="sub()"></label>
                            </span>*@
                        </td>
                        </form>
                    </tr>
                }


            </tbody>

        </table>
    </div>
}

else if (Model.Count() == 0)
{
    <div><h3 class="ml-5">Select Role Or enter valid name email or phone!</h3></div>
}


