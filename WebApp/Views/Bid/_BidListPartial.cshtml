@model IEnumerable<BidResponse>

<style>
body {
    background-color: #eee
}

.card {
    border: none;
    border-radius: 10px
}

.c-details span {
    font-weight: 300;
    font-size: 13px
}

.icon {
    width: 50px;
    height: 50px;
    background-color: #eee;
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 39px
}

.badge span {
    background-color: #fffbec;
    width: 60px;
    height: 25px;
    padding-bottom: 3px;
    border-radius: 5px;
    display: flex;
    color: #3333ff;
    justify-content: center;
    align-items: center
}

.progress {
    height: 10px;
    border-radius: 10px
}

.progress div {
    background-color: red
}

.text1 {
    font-size: 14px;
    font-weight: 600
}

.text2 {
    color: #a5aec0
}


</style>

    @if (Model != null && Model.Count() > 0)
{
            <div class=" container mt-5 mb-3  col-12">
    <div class="row">
    
        @foreach (var item in Model)
        {

        <div class="  col-6">
            <div class="card p-3 mb-2">
                <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                        <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                        <div class="ms-2 c-details">
                            <h6 class="mb-0">@item.BidRate</h6> <span>@item.BidType</span>
                        </div>
                    </div>
                    <div class="badge"><span>@item.BidNumber</span></div>
                </div>
                  <div>
                    <h6 class="heading" style="color:#ff66b3;" >@item.BidStatus<br></h6>
                   
                </div>

                <div class="mt-5">
                    <h5 class="heading">@item.Discription<br></h5>
                    <div class="mt-5">
                      
                        <div class="mt-3"> <span class="text1">32 Applied <span class="text2">of 50 capacity</span></span> </div>
                    </div>
                </div>
            </div>
        </div>
  
              

        }
    </div>
    </div>  
}