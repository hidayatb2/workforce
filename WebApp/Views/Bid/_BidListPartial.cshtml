@model IEnumerable<BidResponse>


<head>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<style>

</style>

@if (Model != null && Model.Count() > 0)
{
    <div id="partialData" class=" @* mt-5 mb-3 *@ col-12">
        <div class="row">

            @foreach (var item in Model)
            {
                if (item.BidStatus == BidStatus.Pending)
                {

                    <form asp-action="updatebid" asp-controller="bid" method="post"  style="margin-top:20px;background-color:#cffaf4">
                        <div class="row">
                             <input name="Id" hidden  value="@item.Id" />
                             @*<input hidden asp-for="@item.Id" class="form-control">*@
                            <div class="col-6">
                                <div class="form-group ">
                                    <label asp-for="@item.BidNumber">Bid Number</label>
                                    <input  name="BidNumber" asp-for="@item.BidNumber" readonly class="form-control">
                                </div>
                                <div class="form-group ">
                                    <label asp-for="@item.BidRate">Bid Rate</label>
                                    <input  name="BidRate" asp-for="@item.BidRate" class="form-control">
                                </div> 
                               
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="@item.BidType">Bid Type</label>
                                    <input name="BidType" asp-for="@item.BidType" class="form-control">
                                </div> 
                                <div class="form-group">
                                    <label asp-for="@item.BidStatus">Bid Status</label>
                                    <input name="BidStatus" asp-for="@item.BidStatus" readonly class="form-control">
                                </div>
                            </div>
                             <div class="form-group ">
                                    <label asp-for="@item.Address">Address</label>
                                    <input name="Address" asp-for="@item.Address" class="form-control">
                                </div>
                            <div class="form-group">
                                <label asp-for="@item.Discription">Discription</label>
                                <textarea name="Discription" class="form-control" asp-for="@item.Discription" rows="3"></textarea>
                            </div>
                            <div class="form-group col-6 ">
                                <div>
                                <button type="submit" class="btn btn-info">Update</button>
                                </div>
                                <div>
                                    <a asp-action="deletebid" style="display: inline-flex;background-color: red;margin-left: 900px;margin-top: -62px;" class="btn btn-danger" asp-controller="bid" asp-route-id="@item.Id">Delete</a>
                                </div>
                            </div>
                        </div>

                    </form>


                }
                else if (item.BidStatus == BidStatus.Accepted)

                {

                    <div class="  col-6">
                        <div class="card p-3 mb-2">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-row align-items-center">
                                    <div class="icon"> <i class="bx bxl-mailchimp"></i> </div>
                                    <div class="ms-2 c-details">
                                        <h6 class="mb-0">@item.BidRate</h6> <span>@item.BidType</span>
                                    </div>
                                    <div class="badge"><span>@item.BidNumber</span></div>
                                </div>
                                <div>
                                    <h6 class="heading" style="color:#ff66b3;">@item.BidStatus<br></h6>

                                </div>

                                <div class="mt-5">
                                    <h5 class="heading">@item.Discription<br></h5>
                                    <div class="mt-5">

                                        <div class="mt-3"> <span class="text1">32 Applied <span class="text2">of 50 capacity</span></span> </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
    </div>
}
