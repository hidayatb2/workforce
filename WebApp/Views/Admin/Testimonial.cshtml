@model IEnumerable<TestimonialResponse>

<table class="table table-hover table-light container" style="margin-top:110px">
    <tr>
        <th>Name</th>
        <th>Feedback</th>
        <th>Status</th>
        <th>UserRole</th>
        <th>Action</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.FeedbackMessage</td>
            <td>@item.Status</td>
            <td>@item.UserRole.ToString()</td>
            
            <td>
                <span class="form-check form-switch">
                    <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                    <input class="form-check-input " type="checkbox" id="flexSwitchCheckChecked">
                </span>

            </td>
            <td>
                <a class="btn btn-danger anchr" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Testimonial">Delete</a>
            </td>

        </tr>
    }
</table>
